<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="homeSettings">
		<control type="group">
			<posx>640</posx>
			<posy>0</posy>
			<control type="image">
				<posx>-162</posx>
				<posy>-</posy>
				<width>345</width>
				<height>27</height>
				<texture border="10">backgrounds/menu_Hint.png</texture>
				<colordiffuse>SettingsHint</colordiffuse>
				<visible>Control.HasFocus(1160)</visible>
				<include>slideinoutTop</include>
			</control>
			<control type="image">
				<posx>-25</posx>
				<posy>-10</posy>
				<width>50</width>
				<height>25</height>
				<texture border="10">backgrounds/menu_Hint.png</texture>
				<colordiffuse>SettingsHint</colordiffuse>
				<visible>!Control.HasFocus(1160)</visible>
			</control>
			<control type="image">
				<posx>-5</posx>
				<posy>2</posy>
				<width>10</width>
				<height>10</height>
				<texture>icons/icon_Settings.png</texture>
				<colordiffuse>Title</colordiffuse>
				<visible>!Control.HasFocus(1160)</visible>
			</control>
			<control type="list" id="1160">
				<posx>-150</posx>
				<posy>-</posy>
				<width>600</width>
				<height>300</height>
				<onback>9000</onback>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onright>1160</onright>
				<onleft>1160</onleft>
				<orientation>horizontal</orientation>
				<scrolltime>150</scrolltime>
				<focusposition>1</focusposition>
				<visible allowhiddenfocus="true">Control.HasFocus(1160)</visible>
				<include>slideinoutTop</include>
				<include>subMenu_Transition</include>
				
				<itemlayout width="50" height="250">
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>15</width>
						<height>15</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<colordiffuse>SubTitle</colordiffuse>
					</control>
				</itemlayout>							
				<focusedlayout width="50" height="250">
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>15</width>
						<height>15</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<colordiffuse>Accent</colordiffuse>
					</control>
					<control type="label">
						<posx>15</posx>
						<posy>5</posy>
						<width>200</width>
						<height>50</height>
						<font>XSmall</font>
						<align>left</align>
						<textcolor>White</textcolor>
						<angle>-75</angle>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Skin.HasSetting(labels.disable)</visible>
					</control>

				</focusedlayout>

				<content>
					<item id="1">
						<label>$LOCALIZE[5]</label>
						<onclick>ActivateWindow(settings)</onclick>
						<visible>true</visible>
						<icon>icons/icon_Settings.png</icon>
					</item>
					<item id="2">
						<label>$LOCALIZE[130]</label>
						<onclick>ActivateWindow(SystemInfo)</onclick>
						<visible>Skin.HasSetting(systemmenu.info)</visible>
						<icon>icons/icon_Info.png</icon>
					</item>
					<item id="3">
						<label>$LOCALIZE[7]</label>
						<onclick>ActivateWindow(Filemanager)</onclick>
						<visible>Skin.HasSetting(systemmenu.filemanager)</visible>
						<icon>icons/icon_File.png</icon>
					</item>
					<item id="4">
						<label>$LOCALIZE[31030]</label>
						<onclick>SetFocus(9000)</onclick>
						<onclick>ActivateWindow(61)</onclick>
						<visible>Skin.HasSetting(systemmenu.home)</visible>
						<icon>icons/icon_Menu.png</icon>
					</item>
					<item id="5">
						<label>Search</label>
						<onclick>RunScript(script.globalsearch)</onclick>
						<visible>true</visible>
						<icon>icons/icon_Search.png</icon>
					</item>
					<item id="9">
						<label>$LOCALIZE[1036]</label>
						<onclick>ActivateWindow(Favourites)</onclick>
						<visible>!Skin.HasSetting(homemenu.favourites)</visible>
						<icon>icons/icon_FavoritesAlt.png</icon>
					</item>
					<item id="10">
						<label>$LOCALIZE[31013]</label>
						<onclick>ActivateWindow(shutdownmenu)</onclick>
						<visible>Skin.HasSetting(systemmenu.exit)</visible>
						<icon>icons/icon_Exit.png</icon>
					</item>
				</content>
			</control>
		</control>
	</include>
</includes>