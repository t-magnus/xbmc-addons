<?xml version="1.0" encoding="UTF-8"?>
<window id="2901">
	<defaultcontrol always="true">14</defaultcontrol>
	<allowoverlay>yes</allowoverlay>	
	<controls>
		<control type="group">
			<posx>0</posx>
			<posy>600</posy>
			<control type="image">
				<description>Background</description>
				<posx>460</posx>
				<posy>-</posy>
				<width>360</width>
				<height>80</height>
				<include>OSDWindow</include>
				<visible>!Skin.HasSetting(Player.VideoInfo)</visible>
			</control>
			<control type="image">
				<description>Background</description>
				<posx>0</posx>
				<posy>-</posy>
				<width>1280</width>
				<height>120</height>
				<include>OSDWindow</include>
				<visible>Skin.HasSetting(Player.VideoInfo)</visible>
			</control>	

			<!--Video Info, Progress Bar(repeat DialogFullscreenInfo)-->
			<control type="group">
				<visible>Skin.HasSetting(Player.VideoInfo)</visible>
				<control type="label">
					<posx>30</posx>
					<posy>-</posy>
					<width>880</width>
					<label>$INFO[VideoPlayer.TVShowTitle] [COLOR=Accent]$INFO[VideoPlayer.Title][/COLOR]</label>
					<align>left</align>
					<font>Medium</font>
					<textcolor>White</textcolor>
					<shadowcolor>OSDBackground</shadowcolor>
					<visible>VideoPlayer.Content(Episodes)</visible>
				</control>
				<control type="label">
					<posx>30</posx>
					<posy>-</posy>
					<width>880</width>
					<label>$INFO[VideoPlayer.Title]</label>
					<align>left</align>
					<font>Medium</font>
					<textcolor>White</textcolor>
					<shadowcolor>OSDBackground</shadowcolor>
					<visible>VideoPlayer.Content(Movies) | VideoPlayer.Content(livetv)</visible>
				</control>
				<control type="label">
					<posx>30</posx>
					<posy>-</posy>
					<width>880</width>
					<label>$INFO[VideoPlayer.Artist]$INFO[VideoPlayer.Album, - ]</label>
					<align>left</align>
					<font>Medium</font>
					<textcolor>White</textcolor>
					<shadowcolor>OSDBackground</shadowcolor>
					<visible>VideoPlayer.Content(MusicVideos)</visible>
				</control>
				<control type="label">
					<description>Chapter Count</description>
					<posx>30</posx>
					<posy>30</posy>
					<width>300</width>
					<label>$INFO[Player.Chapter,[COLOR=Accent]$LOCALIZE[21396]:[/COLOR] ]$INFO[Player.ChapterCount, / ]</label>
					<align>left</align>
					<font>SmallLow</font>
					<textcolor>White</textcolor>
					<visible>Player.ChapterCount</visible>
				</control>
				<control type="label">
					<posx>30</posx>
					<posy>30</posy>
					<width>880</width>
					<label>season $INFO[VideoPlayer.Season] - episode $INFO[VideoPlayer.Episode]</label>
					<scroll>true</scroll>
					<align>left</align>
					<font>SmallLow</font>
					<shadowcolor>OSDBackground</shadowcolor>
					<textcolor>White</textcolor>
					<visible>VideoPlayer.Content(Episodes)</visible>
				</control>
				<control type="label">
					<description>Player Times</description>
					<posx>1250</posx>
					<posy>-</posy>
					<width>500</width>
					<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
					<align>right</align>
					<font>Medium</font>
					<textcolor>White</textcolor>
				</control>
				<control type="label">
					<description>Current Video End Time</description>
					<posx>1250</posx>
					<posy>30</posy>
					<width>890</width>
					<label>[COLOR=Accent]Ends @[/COLOR] $INFO[Player.FinishTime]</label>
					<align>right</align>
					<font>SmallLow</font>
					<shadowcolor>OSDText</shadowcolor>
					<textcolor>White</textcolor>
				</control>
				<control type="progress">
					<description>Progressbar</description>
					<posx>25</posx>
					<posy>85</posy>
					<width>1230</width>
					<height>10</height>
					<texturebg>OSD/ProgressClearAlt.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture>OSD/ProgressWhite.png</midtexture>
					<righttexture>-</righttexture>
					<overlaytexture>-</overlaytexture>
					<info>Player.Progress</info>
				</control>
			</control> 

			<!--Buttons Player Buttons-->
			<control type="group">
				<visible>!Window.IsVisible(sliderdialog)</visible>
				<control type="grouplist" id="101">
					<posx>390</posx>
					<posy>15</posy>
					<width>500</width>
					<height>80</height>
					<itemgap>2</itemgap>
					<orientation>horizontal</orientation>
					<align>center</align>
					<onleft>101</onleft>
					<onright>101</onright>
					<onup>600</onup>
					<ondown>-</ondown>
					<control type="button" id="12">
						<description>Skip Back</description>
						<width>50</width>
						<height>50</height>
						<label>Previous</label>
						<font>-</font>
						<texturefocus>OSD/player/PrevTrackFO.png</texturefocus>
						<texturenofocus>OSD/player/PrevTrackNF.png</texturenofocus>
						<onclick>PlayerControl(Previous)</onclick>
					</control>
					<control type="button" id="13">
						<description>Rewind</description>
						<width>50</width>
						<height>50</height>
						<label>Rewind</label>
						<font>-</font>
						<texturefocus>OSD/player/RewindFO.png</texturefocus>
						<texturenofocus>OSD/player/RewindNF.png</texturenofocus>
						<onclick>PlayerControl(Rewind)</onclick>
					</control>
					<control type="togglebutton" id="14">
						<description>Play/Pause</description>
						<width>50</width>
						<height>50</height>
						<label>Pause</label>
						<altlabel>Play</altlabel>
						<font>-</font>
						<texturefocus>OSD/player/PauseFO.png</texturefocus>
						<texturenofocus>OSD/player/PauseNF.png</texturenofocus>
						<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
						<alttexturefocus>OSD/player/PlayFO.png</alttexturefocus>
						<alttexturenofocus>OSD/player/PlayNF.png</alttexturenofocus>
						<onclick>PlayerControl(Play)</onclick>
					</control>
					<control type="button" id="15">
						<description>Stop</description>
						<width>50</width>
						<height>50</height>
						<label>Stop</label>
						<font>-</font>
						<texturefocus>OSD/player/StopFO.png</texturefocus>
						<texturenofocus>OSD/player/StopNF.png</texturenofocus>
						<onclick>PlayerControl(Stop)</onclick>
					</control>
					<control type="button" id="16">
						<description>Fast Forward</description>
						<width>50</width>
						<height>50</height>
						<label>Fast Forward</label>
						<font>-</font>
						<texturefocus>OSD/player/ForwardFO.png</texturefocus>
						<texturenofocus>OSD/player/ForwardNF.png</texturenofocus>
						<onclick>PlayerControl(Forward)</onclick>
					</control>
					<control type="button" id="17">
						<description>Next</description>
						<width>50</width>
						<height>50</height>
						<label>Next</label>
						<font>-</font>
						<texturefocus>OSD/player/NextTrackFO.png</texturefocus>
						<texturenofocus>OSD/player/NextTrackNF.png</texturenofocus>
						<onclick>PlayerControl(Next)</onclick>
					</control>
				</control>
			</control>
		</control>

		<!-- Audio Video Settings Menu -->
		<control type="image">
			<posx>618</posx>
			<posy>560</posy>
			<width>44</width>
			<height>44</height>
			<texture>osd/openSettings.png</texture>
			<visible>Window.IsActive(fullscreenvideo) + !ControlGroup(600).HasFocus</visible>
