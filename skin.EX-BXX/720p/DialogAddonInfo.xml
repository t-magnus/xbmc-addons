<?xml version="1.0" encoding="UTF-8"?>

<window id="146">
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>GlobalOverlay</include>
		<control type="group">
			<posx>250</posx>
			<posy>110</posy>
			<include>dialogOpen</include>
			<animation type="Conditional" condition="Player.HasVideo">
				<effect type="slide" start="0,0" end="0,-75" time="350" tween="quadratic" />
			</animation>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>780</width>
				<height>500</height>
				<include>dialogWindow</include>
			</control>
			<control type="group">
				<visible>!Window.IsVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>
				<control type="image">
					<posx>30</posx>
					<posy>30</posy>
					<width>200</width>
					<height>200</height>
					<texture fallback="DefaultAddon.png">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="top">keep</aspectratio>
					<bordertexture border="3">buttons/ButtonFO.png</bordertexture>
					<bordersize>5</bordersize>
				</control>
				<control type="label">
					<description>Addon Title value</description>
					<posx>250</posx>
					<posy>20</posy>
					<width>580</width>
					<align>left</align>
					<font>Large</font>
					<label>[B]$INFO[ListItem.Property(Addon.Name)][/B]</label>
					<scroll>true</scroll>
				</control>
				<control type="grouplist">
					<posx>250</posx>
					<posy>60</posy>
					<width>500</width>
					<height>140</height>
					<itemgap>0</itemgap>
					<orientation>vertical</orientation>
					<control type="label">
						<description>Type Value</description>
						<width>580</width>
						<height>28</height>
						<label>$INFO[ListItem.Property(Addon.Type),[COLOR Accent]$LOCALIZE[146][/COLOR] ]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Property(Addon.Type))</visible>
					</control>
					<control type="label">
						<description>Author Value</description>
						<width>580</width>
						<height>28</height>
						<label>$INFO[ListItem.Property(Addon.Creator),[COLOR Accent]$LOCALIZE[21863]:[/COLOR] ]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Property(Addon.Creator))</visible>
					</control>
					<control type="label">
						<description>Version Value</description>
						<width>580</width>
						<height>28</height>
						<label>$INFO[ListItem.Property(Addon.Version),[COLOR Accent]$LOCALIZE[24051][/COLOR] ]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Property(Addon.Version))</visible>
					</control>
					<control type="fadelabel">
						<description>Summary Value</description>
						<width>580</width>
						<height>28</height>
						<label>$INFO[ListItem.Property(Addon.Summary),[COLOR Accent]$LOCALIZE[20037]:[/COLOR] ]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Property(Addon.Summary))</visible>
					</control>
					<control type="fadelabel">
						<description>Disclaimer</description>
						<width>580</width>
						<height>28</height>
						<label>$INFO[ListItem.Property(Addon.Disclaimer),[COLOR Red]$LOCALIZE[24052]:[/COLOR] ]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Property(Addon.Disclaimer))</visible>
					</control>
				</control>
				<control type="textbox" id="400">
					<description>Description</description>
					<posx>250</posx>
					<posy>210</posy>
					<width>500</width>
					<height>265</height>
					<font>SmallLow</font>
					<align>justify</align>
					<label>$INFO[ListItem.Property(Addon.Description)]</label>
				</control>
				<control type="grouplist" id="9000">
					<posx>30</posx>
					<posy>260</posy>
					<width>200</width>
					<height>230</height>
					<itemgap>0</itemgap>
					<onup>9000</onup>
					<ondown>9000</ondown>
					<onright>50</onright>
					<onleft>50</onleft>
					<orientation>vertical</orientation>
					<control type="button" id="6">
						<description>Install/Uninstall Addon button</description>
						<width>200</width>
						<label>24022</label>
					</control>
					<control type="button" id="7">
						<description>Enable/Disable Addon button</description>
						<width>200</width>
						<label>24021</label>
					</control>
					<control type="button" id="9">
						<description>Addon Settings</description>
						<width>200</width>
						<label>24020</label>
					</control>
					<control type="button" id="8">
						<description>Update Addon button</description>
						<width>200</width>
						<label>24069</label>
					</control>
					<control type="button" id="10">
						<description>Changelog button</description>
						<width>200</width>
						<label>24036</label>
					</control>
				</control>
				<control type="group">
					<visible>!IsEmpty(ListItem.Property(Addon.broken))</visible>
					<posx>-20</posx>
					<posy>588</posy>
					<control type="image">
						<description>background image</description>
						<posx>0</posx>
						<posy>0</posy>
						<width>920</width>
						<height>120</height>
						<texture border="15">other_textures/ContentPanel.png</texture>
					</control>
					<control type="image">
						<description>Icon image</description>
						<posx>24</posx>
						<posy>24</posy>
						<width>32</width>
						<height>32</height>
						<texture>DefaultIconError.png</texture>
					</control>
					<control type="textbox">
						<description>Reason label</description>
						<posx>72</posx>
						<posy>22</posy>
						<width>800</width>
						<height>50</height>
						<label>$INFO[ListItem.Property(Addon.broken)]</label>
						<align>justify</align>
						<autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>