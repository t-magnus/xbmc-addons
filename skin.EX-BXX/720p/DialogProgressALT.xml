<?xml version="1.0" encoding="UTF-8"?>

<window id="101">
	<defaultcontrol></defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="group">
			<posx>673</posx>
			<posy>10</posy>
			<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,-180" end="0,0" time="400" tween="cubic" easing="out" />
				<effect type="fade" start="0" end="100" time="400" />
			</animation>
			<animation type="Conditional" condition="Window.IsVisible(fullscreeninfo) | Window.IsVisible(seekbar) | [Window.IsVisible(visualisation) + Player.ShowInfo]" reversible="true">
				<effect type="slide" start="0,0" end="0,95" time="400" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="100" />
			</animation>
			<visible>!Window.IsVisible(volumebar) + !Window.IsVisible(infodialog) + !Window.IsVisible(busydialog)</visible>

			<control type="image">
				<description>Image</description>
				<posx>500r</posx>
				<posy>-10</posy>
				<width>500</width>
				<height>120</height>
				<aspectratio align="left">stretch</aspectratio>
				<texture>OSD/BG_Cloud.png</texture>
				<colordiffuse>ButtonNF</colordiffuse>
				<visible>Player.HasVideo + VideoPlayer.IsFullscreen</visible>
			</control>

			<control type="group">
				<posx>530</posx>
				<posy>-</posy>
				<width>780</width>
				<height>100</height>
				<itemgap>0</itemgap>
				<orientation>Vertical</orientation>

				<control type="label" id="1">
					<description>Heading Label</description>
					<posy>-</posy>
					<width>775</width>
					<height>30</height>
					<align>right</align>
					<scroll>true</scroll>
					<font>XSmallCapsBold</font>
					<textcolor>Title</textcolor>
				</control>
				<control type="label" id="2">
					<posy>20</posy>
					<width>775</width>
					<height>30</height>
					<align>right</align>
					<scroll>true</scroll>
					<label>-</label>
					<font>XSmallCaps</font>
					<textcolor>SubTitle</textcolor>
				</control>			
				<control type="label" id="3">
					<posy>40</posy>
					<width>775</width>
					<height>30</height>
					<align>right</align>
					<scroll>true</scroll>
					<label>-</label>
					<font>XSmallCaps</font>
					<textcolor>SubTitle</textcolor>
				</control>
				<control type="label" id="4">
					<posy>60</posy>
					<width>775</width>
					<height>30</height>
					<align>right</align>
					<scroll>true</scroll>
					<label>-</label>
					<font>XSmallCaps</font>
					<textcolor>SubTitle</textcolor>
				</control>
			</control>


			<control type="progress">
				<description>progress control</description>
				<posx>70r</posx>
				<posy>-</posy>
				<width>50</width>
				<height>50</height>
				<info>System.Progressbar</info>
				<texturebg>icons/ToastIconClear.png</texturebg>
				<midtexture>icons/ToastIconProgress.png</midtexture>
				<colordiffuse>-</colordiffuse>
				<reveal>true</reveal>
				<animation effect="rotate" center="auto" end="-90" time="0" condition="true">Conditional</animation>
			</control>

			<!-- Progress Overlay -->

			<control type="image">
				<description>Image</description>
				<posx>70r</posx>
				<posy>-</posy>
				<width>50</width>
				<height>50</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>icons\ToastIconDownload.png</texture>
				<colordiffuse>Green</colordiffuse>
			</control>
		</control>
	</controls>
</window>