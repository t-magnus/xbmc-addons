<?xml version="1.0" encoding="UTF-8"?>

<window type="buttonMenu" id="111">
    <defaultcontrol always="true">3110</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
	<zorder>50</zorder>
    <controls>
		<control type="image">
			<description>background image</description>
			<posx>250r</posx>
			<posy>0</posy>
			<width>250</width>
			<height>720</height>
			<include>dialogWindow</include>
			<animation effect="Slide" start="250" end="0" time="350" delay="600" tween="quadratic">WindowOpen</animation>
			<animation effect="Slide" start="0" end="250" time="350" delay="600" tween="quadratic">WindowClose</animation>
		</control>
        <control type="group">
            <posx>250r</posx>
			<posy>150</posy>
			<animation effect="Slide" start="250" end="0" time="350" delay="600" tween="quadratic">WindowOpen</animation>
			<animation effect="Slide" start="0" end="250" time="350" delay="600" tween="quadratic">WindowClose</animation>
            <control type="grouplist" id="3110">
                <posx>20</posx>
                <width>230</width>
                <height>382</height>
                <itemgap>0</itemgap>
                <onleft>back</onleft>
                <onright>back</onright>
                <onup>3110</onup>
                <ondown>3110</ondown>
                <orientation>vertical</orientation>
                <control type="button" id="3111">
                    <description>Exit XBMC button</description>
                    <label>13012</label>
                    <onclick>Quit()</onclick>
                    <visible>System.ShowExitButton</visible>
                </control>
                <control type="button" id="3112">
                    <description>Master mode button</description>
                    <label>20046</label>
                    <altlabel>20045</altlabel>
                    <onclick>xbmc.mastermode</onclick>
                    <visible>System.HasLocks</visible>
                </control>
                <control type="button" id="3113">
                    <description>LogOff Profile</description>
                    <include>SettingsLabel</include>
                    <label>$LOCALIZE[20126] $INFO[system.profilename]</label>
                    <onclick>dialog.close(all,true)</onclick>
                    <onclick>System.LogOff</onclick>
                    <visible>System.Loggedon + System.HasLoginScreen</visible>
                </control>
                <control type="button" id="3114">
                    <description>Custom Shutdown Timer button</description>
                    <label>20151</label>
                    <onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
                    <visible>System.HasAlarm(shutdowntimer)</visible>
                </control>
                <control type="button" id="3115">
                    <description>Custom Shutdown Timer button</description>
                    <label>20150</label>
                    <onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Powerdown())</onclick>
					<onclick>Dialog.Close(shutdownmenu)</onclick>
                    <visible>!System.HasAlarm(shutdowntimer)</visible>
                </control>
                <control type="button" id="3116">
                    <description>Shutdown</description>
                    <label>13005</label>
                    <onclick>Dialog.Close(shutdownmenu)</onclick>
					<onclick>XBMC.Powerdown()</onclick>
                </control>
                <control type="button" id="3117">
                    <description>Suspend xbmc</description>
                    <label>13011</label>
                    <onclick>XBMC.Suspend()</onclick>
                </control>
                <control type="button" id="3118">
                    <description>Reboot button</description>
                    <label>13013</label>
                    <onclick>Dialog.Close(shutdownmenu)</onclick>
					<onclick>XBMC.Reset()</onclick>
                </control>
                <control type="label" id="3119">
                    <description>Alarm Time</description>
                    <align>center</align>
                    <label>$LOCALIZE[20145] [B]$INFO[System.Alarmpos][/B]</label>
                    <visible>System.HasAlarm(shutdowntimer)</visible>
                </control>
            </control>
        </control>
    </controls>
</window>