<?xml version="1.0" encoding="UTF-8"?>
<window id="502">
    <defaultcontrol always="true">50</defaultcontrol>
	<onload condition="Window.Previous(home) + !Skin.HasSetting(DisabledSplash)">ActivateWindow(60)</onload>
    <allowoverlay>yes</allowoverlay>
    <views>50</views>
    <controls>
        <control type="radiobutton" id="19">
            <description>Filter (hidden)</description>
            <include>HiddenButton</include>
        </control>
		
		<include>GlobalBackground</include>

		<!--  Fanart Diffuse -->		
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<fadetime>400</fadetime>
			<colordiffuse>-</colordiffuse>
			<texture background="true" diffuse="backgrounds/BG_GradientFanart.png">$INFO[ListItem.Art(fanart)]</texture>
			<include>Animation_CommonFade</include>
		</control>
		
        <include>View_50_List</include>
		
		<!-- Settings Hint -->
		<control type="group">
			<control type="image">
				<posx>615</posx>
				<posy>-10</posy>
				<width>50</width>
				<height>25</height>
				<texture border="10">backgrounds/menu_Hint.png</texture>
				<colordiffuse>SettingsHint</colordiffuse>
			</control>
			<control type="image">
				<posx>635</posx>
				<posy>2</posy>
				<width>10</width>
				<height>10</height>
				<texture>icons/icon_Settings.png</texture>
				<colordiffuse>Title</colordiffuse>
			</control>
		</control>
		
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>250</width>
			<height>720</height>
			<include>dialogWindow</include>
			<visible allowhiddenfocus="true">ControlGroup(5000).HasFocus()</visible>
			<animation effect="Slide" start="-250" end="0" time="350" delay="600" tween="quadratic">Visible</animation>
			<animation effect="Slide" start="0" end="-250" time="350" tween="quadratic">Hidden</animation>
		</control>

		<!-- Settings -->
        <control type="grouplist" id="5000">
            <posx>10</posx>
            <posy>150</posy>
            <width>220</width>
            <height>600</height>
            <itemgap>2</itemgap>
            <onleft>50</onleft>
            <onright>50</onright>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <orientation>vertical</orientation>
			<visible allowhiddenfocus="true">ControlGroup(5000).HasFocus()</visible>
            <animation effect="Slide" start="-300" end="0" time="350" delay="600" tween="quadratic">Visible</animation>
			<animation effect="Slide" start="0" end="-300" time="350" tween="quadratic">Hidden</animation>
			<animation effect="Slide" start="0" end="0,-30" time="350" tween="quadratic" condition="Player.HasVideo">Conditional</animation>
            <control type="button" id="2">
                <description>View</description>
                <width>220</width>
                <align>left</align>
            </control>
            <control type="button" id="3">
                <description>Sort</description>
                <width>220</width>
                <align>left</align>
            </control>
            <control type="togglebutton" id="4">
                <description>Ascending</description>
                <width>220</width>
                <align>left</align>
                <label>584</label>
                <altlabel>585</altlabel>
            </control>
            <control type="button" id="5">
                <description>Files</description>
                <width>220</width>
                <align>left</align>
                <label>31001</label>
                <onclick>SetFocus(50)</onclick>
            </control>
            <control type="button" id="8">
                <description>Search</description>
                <width>220</width>
                <align>left</align>
                <label>137</label>
            </control>
            <control type="radiobutton" id="16">
                <description>PartyMode</description>
                <width>220</width>
                <align>left</align>
                <label>589</label>
            </control>
            <control type="button" id="21">
                <description>Activate Filter</description>
                <width>220</width>
                <align>left</align>
                <label>587</label>
                <onclick>SendClick(musiclibrary,19)</onclick>
                <onclick>SetFocus(22)</onclick>
                <visible>IsEmpty(Window.Property(filter))</visible>
            </control>
            <control type="button" id="22">
                <description>Show Filter Label</description>
                <width>220</width>
                <align>left</align>
                <label>$LOCALIZE[587] - $INFO[Window.Property(filter)]</label>
                <onclick>SendClick(musiclibrary,19)</onclick>
                <onclick>SetFocus(21)</onclick>
                <visible>!IsEmpty(Window.Property(filter))</visible>
            </control>
            <control type="button" id="98">
                <description>Open Player Controls</description>
                <width>220</width>
                <align>left</align>
                <label>31015</label>
                <onclick>ActivateWindow(playercontrols)</onclick>
                <visible>Player.HasMedia</visible>
            </control>
        </control>
    </controls>
</window>