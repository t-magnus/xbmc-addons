<?xml version="1.0" encoding="UTF-8"?>
<window id="104">
	<zorder>2</zorder>

	<controls>

		<control type="group">
			<posx>673</posx>
			<posy>10</posy>
			<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,-180" end="0,0" time="400" tween="cubic" easing="out" />
				<effect type="fade" start="0" end="100" time="400" />
			</animation>
			<animation type="Conditional" condition="Window.IsVisible(fullscreeninfo) | Window.IsVisible(seekbar) | [Window.IsVisible(visualisation) + Player.ShowInfo]" reversible="true">
				<effect type="slide" start="0,0" end="0,95" time="400" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="100" />
			</animation>
			<visible>!Window.IsVisible(mutebug) + !Window.IsVisible(infodialog) + !Window.IsVisible(busydialog)</visible>

			<control type="image">
                <description>Image</description>
                <posx>200r</posx>
                <posy>-10</posy>
                <width>200</width>
                <height>120</height>
                <aspectratio align="left">stretch</aspectratio>
                <texture>OSD/BG_Cloud.png</texture>
				<colordiffuse>Cloud</colordiffuse>
				<visible>Player.HasVideo + VideoPlayer.IsFullscreen</visible>
            </control>
			
			<!-- Heading -->

			<control type="label">
				<description>Heading</description>
				<posx>530</posx>
				<posy>-</posy>
				<width>775</width>
				<height>30</height>
				<align>right</align>
				<scroll>true</scroll>
				<font>XSmallCapsBold</font>
				<textcolor>Title</textcolor>
				<label>13376</label>
			</control>

			<!-- Details -->

			<control type="label">
				<description>Message</description>
                <posx>530</posx>
				<posy>20</posy>
				<width>775</width>
				<height>30</height>
				<align>right</align>
				<scroll>true</scroll>
				<haspath>true</haspath>
				<font>XSmallCapsBold</font>
				<textcolor>SubTitle</textcolor>
				<label>$INFO[Control.GetLabel(404),,%]</label>
			</control>

			<!-- Progress -->

			<control type="progress" id="404">
				<description>Progressbar</description>
				<posx>70r</posx>
				<posy>-</posy>
				<width>50</width>
				<height>50</height>
				<texturebg>icons/ToastIconClear.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture>icons/ToastIconProgress.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
				<reveal>true</reveal>
				<info>player.volume</info>
			</control>

			<!-- Progress Overlay -->
			
			<control type="image">
                <description>Image</description>
                <posx>70r</posx>
                <posy>-</posy>
                <width>50</width>
                <height>50</height>
                <aspectratio align="right">keep</aspectratio>
                <texture>icons\ToastIconVolume.png</texture>
				<colordiffuse>Green</colordiffuse>
            </control>

		</control>

	</controls>

</window>