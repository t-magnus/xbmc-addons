<?xml version="1.0" encoding="UTF-8"?>
<window id="2003">
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>

		<!-- Artwork -->

		<!--control type="image">
			<posx>620</posx>
			<posy>200</posy>
			<width>10</width>
			<height>180</height>
			<aspectratio align="left">keep</aspectratio>
			<texture>pvr/separator-y.png</texture>
			<colordiffuse>Title</colordiffuse>
			<visible>!Control.HasFocus(50) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]</visible>
			<animation type="WindowOpen" reversible="true">
				<effect type="fade" start="0" end="100" time="200" delay="200" tween="cubic" easing="out" />
			</animation>
		</control-->

		<control type="group">
			<posx>325</posx>
			<posy>160</posy>
			<control type="image">
				<include>Poster_Slide</include>
				<texture>backgrounds/BG_White.png</texture>
				<colordiffuse>Accent</colordiffuse>
				<visible>Control.HasFocus(50)</visible>
				<animation type="Visible" reversible="true">
					<effect type="fade" delay="350" start="0" end="100" time="350" />
					<effect type="zoom" delay="350" start="130" end="130" tween="quadratic" center="auto" time="200" />
				</animation>
			</control>
			<control type="image">
				<include>Poster_Slide</include>
				<texture>backgrounds/BG_White.png</texture>
				<bordersize>1</bordersize>
				<colordiffuse>DialogBackground</colordiffuse>
				<visible>Control.HasFocus(50)</visible>
				<animation type="Visible" reversible="true">
					<effect type="fade" delay="350" start="0" end="100" time="350" />
					<effect type="zoom" delay="350" start="130" end="130" tween="quadratic" center="auto" time="200" />
				</animation>
			</control>
			<control type="image">
				<description>Actor Image</description>
				<include>Poster_Slide</include>
				<texture>$INFO[Container(50).ListItem.Icon]</texture>
				<aspectratio align="center" aligny="center">scale</aspectratio>
				<bordersize>5</bordersize>
				<visible>Control.HasFocus(50)</visible>
				<animation type="Visible" reversible="true">
					<effect type="fade" delay="350" start="0" end="100" time="350" />
					<effect type="zoom" delay="350" start="130" end="130" tween="quadratic" center="auto" time="200" />
				</animation>
			</control>
			<control type="image">
				<description>Cover Shine Image</description>
				<include>Poster_Slide</include>
				<texture background="true">Overlays/OverlayShine.png</texture>
				<bordersize>-</bordersize>
				<aspectratio align="right">stretch</aspectratio>
				<visible>Control.HasFocus(50)</visible>
				<animation type="Visible" reversible="true">
					<effect type="fade" delay="350" start="0" end="100" time="350" />
					<effect type="zoom" delay="350" start="130" end="130" tween="quadratic" center="auto" time="200" />
				</animation>
			</control>
		</control>

		<!--Cast Labels-->	

		<control type="wraplist" id="50">
			<description>Cast</description>
			<posx>450</posx>
			<posy>130</posy>
			<width>700</width>
			<height>350</height>
			<onup>50</onup>
			<ondown>50</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<orientation>vertical</orientation>
			<focusposition>3</focusposition>
			<scrolltime tween="Quadratic" easing="out">250</scrolltime>			
			<itemlayout height="50">
				<control type="label">
					<posx>200</posx>
					<width>550</width>
					<height>50</height>
					<info>ListItem.Label</info>
					<align>left</align>
					<font>Small</font>
					<aligny>center</aligny>
				</control>
			</itemlayout>
			<focusedlayout height="50">
				<control type="label">
					<posx>200</posx>
					<width>550</width>
					<height>50</height>
					<info>ListItem.Label</info>
					<align>left</align>
					<aligny>center</aligny>
					<font>SmallBold</font>
					<textcolor>IconOverlay</textcolor>
					<animation effect="zoom" start="100" end="150" center="225,25" delay="200" time="200">focus</animation>
				</control>
			</focusedlayout>
		</control>

		<!-- Start Controls that Slide -->

		<control type="group">
			<posx>670</posx>
			<posy>450</posy>
			<animation type="WindowOpen" reversible="true">
				<effect type="fade" start="0" end="100" time="200" delay="200" tween="cubic" easing="out" />
				<effect type="slide" start="0,-350" end="0,-350" time="200" delay="350" tween="cubic" easing="out" />
			</animation>

			<!-- Media Metadata -->

			<control type="grouplist">
				<posx>-</posx>
				<posy>-</posy>
				<itemgap>10</itemgap>
				<visible>!Control.IsVisible(50)</visible>

				<!-- Line 1 Title-->
				<control type="grouplist">
					<posx>-</posx>
					<posy>-</posy>
					<width>600</width>
					<height>50</height>
					<itemgap>10</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<width>550</width>
						<height>45</height>
						<label>$INFO[ListItem.Label]</label>
						<font>XLargeLow</font>
						<textcolor>Title</textcolor>
						<align>left</align>
						<aligny>center</aligny>
						<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)</visible>
					</control>
					<control type="label">
						<width>550</width>
						<height>45</height>
						<label>$INFO[ListItem.Title]</label>
						<font>XLargeLow</font>
						<textcolor>Title</textcolor>
						<align>left</align>
						<aligny>center</aligny>
						<visible>Container.Content(episodes)</visible>
					</control>
				</control>

				<control type="label">
					<width>500</width>
					<height>20</height>
					<label>$INFO[ListItem.Genre]</label>
					<font>SmallLow</font>
					<textcolor>SubTitle</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<visible>Container.Content(movies)</visible>
				</control>

				<control type="label">
					<width>500</width>
					<height>20</height>
					<label>$INFO[ListItem.Property(UnWatchedEpisodes),, $LOCALIZE[16101] $LOCALIZE[20360]]</label>
					<font>SmallLow</font>
					<textcolor>SubTitle</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<visible>Container.Content(tvshows) | Container.Content(seasons)</visible>
				</control>

				<control type="label">
					<width>500</width>
					<height>20</height>
					<label>$LOCALIZE[31087] $INFO[ListItem.Season] • $LOCALIZE[31088] $INFO[ListItem.Episode]</label>
					<font>Small</font>
					<textcolor>SubTitle</textcolor>
					<visible>Container.Content(episodes)</visible>
				</control>

				<control type="label">
					<width>500</width>
					<height>20</height>
					<label>$INFO[ListItem.Duration] $LOCALIZE[31103]</label>
					<font>SmallLow</font>
					<textcolor>SubTitle</textcolor>
					<visible>Container.Content(movies) | Container.Content(episodes)</visible>
				</control>
				<control type="label">
					<width>490</width>
					<height>20</height>
					<label>$VAR[tvshow_Info.NextAired]</label>
					<font>SmallLow</font>
					<textcolor>SubTitle</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<visible>Container.Content(tvshows) | Container.Content(seasons)</visible>
				</control>
				<control type="label">
					<width>700</width>
					<height>20</height>
					<label>$VAR[movie_Info.Date]</label>
					<font>SmallLow</font>
					<textcolor>SubTitle</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<visible>Container.Content(movies)</visible>
				</control>

				<!-- Star Rating -->

				<control type="image">
					<width>85</width>
					<height>20</height>
					<texture>rating0.png</texture>
					<colordiffuse>Rating</colordiffuse>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<visible>!IntegerGreaterThan(ListItem.Rating,0)</visible>
				</control>
				<control type="image">
					<width>85</width>
					<height>20</height>
					<info>ListItem.StarRating</info>
					<colordiffuse>Rating</colordiffuse>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<visible>IntegerGreaterThan(ListItem.Rating,0)</visible>
				</control>

				<!-- Metadata Icons -->		

				<control type="grouplist">
					<posx>-</posx>
					<posy>-</posy>
					<width>555</width>
					<height>50</height>
					<itemgap>10</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>

					<control type="image">
						<include>Icons</include>
						<aspectratio>keep</aspectratio>
						<texture fallback="flags/default.png">$VAR[flag_Studio]</texture>
						<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)] + ![IsEmpty(ListItem.TVShowTitle) + IsEmpty(ListItem.Title)]</visible>
					</control>				
					<control type="image">
						<description>Common Codec Image</description>
						<include>Icons</include>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.VideoCodec,flags/codec/,.png]</texture>
						<visible>![substring(ListItem.VideoCodec,div,left) | stringcompare(ListItem.VideoCodec,dx50)]</visible>
					</control>
					<control type="image">
						<description>Divx Codec Image</description>
						<include>Icons</include>
						<aspectratio>keep</aspectratio>
						<texture>flags/codec/divx.png</texture>
						<visible>[substring(ListItem.VideoCodec,div,left) | stringcompare(ListItem.VideoCodec,dx50)]</visible>
					</control>
					<control type="image">
						<description>Video rez Image</description>
						<include>Icons</include>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.VideoResolution,flags/type/,.png]</texture>
					</control>
					<control type="image">
						<description>Bluray Image</description>
						<include>Icons</include>
						<aspectratio>keep</aspectratio>
						<texture>flags/codec/bluray.png</texture>
						<visible>[substring(ListItem.FilenameAndPath,bluray) | substring(ListItem.FilenameAndPath,bdrip)]</visible>
					</control>
					<control type="image">
						<description>HDDVD Image</description>
						<include>Icons</include>
						<aspectratio>keep</aspectratio>
						<texture>flags/codec/hddvd.png</texture>
						<visible>substring(ListItem.FilenameAndPath,hddvd)</visible>
					</control>
					<control type="image">
						<description>DVD Image</description>
						<include>Icons</include>
						<aspectratio>keep</aspectratio>
						<texture>flags/codec/dvd.png</texture>
						<visible>[substring(ListItem.FilenameAndPath,dvd)</visible>
					</control>
					<control type="image">
						<description>TV Types Image</description>
						<include>Icons</include>
						<aspectratio>keep</aspectratio>
						<texture>flags/codec/TV.png</texture>
						<visible>[substring(ListItem.FilenameAndPath,pdtv) | substring(ListItem.FilenameAndPath,hdtv) | substring(ListItem.FilenameAndPath,dsr)] + !Skin.HasSetting(HideFilenameother_textures/flagging)</visible>
					</control>
					<control type="group">
						<width>74</width>
						<height>50</height>
						<visible>!SubString(ListItem.Icon,Default) + ![Container.Content(tvshows) | Container.Content(seasons)]</visible>
						<control type="image">
							<include>Icons</include>
							<texture fallback="flags/defaultsound.png">$INFO[ListItem.AudioCodec,flags/audio/,.png]</texture>
						</control>
						<control type="image">
							<include>Icons</include>
							<texture>$INFO[ListItem.AudioChannels,flags/audio/,ch.png]</texture>
						</control>
					</control>
					<control type="image">
						<description>Aspectratio Image</description>
						<include>Icons</include>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.VideoAspect,flags/video/aspectratio/,.png]</texture>
					</control>
				</control>


				<!--Plot -->

				<control type="textbox">
					<description>Plot</description>
					<width>555</width>
					<height>245</height>
					<font>Small</font>
					<textcolor>Plot</textcolor>
					<label>$VAR[global_Plot.Condition]</label>
					<align>justify</align>
				</control>  	

			</control>

			<!-- Buttons -->

			<control type="group">
				<posy>500</posy>

				<control type="label">
					<posx>-20</posx>
					<posy>0</posy>
					<height>40</height>
					<width>20</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>SmallBold</font>
					<textcolor>Label</textcolor>
					<focusedcolor>Focused</focusedcolor>
					<selectedcolor>Selected</selectedcolor>
					<disabledcolor>Disabled</disabledcolor>
					<label>+</label>
					<visible>Container(9000).HasPrevious</visible>
				</control>
				<control type="label">
					<posx>525</posx>
					<posy>0</posy>
					<height>40</height>
					<width>20</width>
					<align>left</align>
					<aligny>center</aligny>
					<font>SmallBold</font>
					<textcolor>Label</textcolor>
					<focusedcolor>Focused</focusedcolor>
					<selectedcolor>Selected</selectedcolor>
					<disabledcolor>Disabled</disabledcolor>
					<label>+</label>
					<visible>Container(9000).HasNext</visible>
				</control>

				<control type="grouplist" id="9000">
					<posx>-</posx>
					<posy>-</posy>
					<width>525</width>
					<height>50</height>
					<itemgap>5</itemgap>
					<onup>50</onup>
					<ondown>50</ondown>
					<onright>9000</onright>
					<onleft>9000</onleft>
					<orientation>horizontal</orientation>
					<defaultcontrol always="false">7</defaultcontrol>

					<control type="button" id="7">
						<description>Close</description>
						<textoffsetx>5</textoffsetx>
						<label>Back</label>
						<align>center</align>
						<onclick>Dialog.Close(2003)</onclick>
						<width>100</width>
					</control>
					<control type="button" id="8">
						<description>Play</description>
						<textoffsetx>5</textoffsetx>
						<label>208</label>
						<align>center</align>
						<width>100</width>
					</control>				
					<control type="button" id="9">
						<description>Resume</description>
						<textoffsetx>5</textoffsetx>
						<label>13404</label>
						<align>center</align>
						<width>100</width>
					</control>
					<control type="button" id="5">
						<description>Cast</description>
						<textoffsetx>5</textoffsetx>
						<onclick condition="Control.IsVisible(50)">Setfocus(50)</onclick>
						<label>206</label>
						<align>center</align>
						<width>100</width>
					</control>
					<control type="button" id="11">
						<description>Trailer button</description>
						<textoffsetx>5</textoffsetx>
						<label>20410</label>
						<align>center</align>
						<width>100</width>
					</control>
					<control type="button" id="6">
						<description>Refresh</description>
						<textoffsetx>5</textoffsetx>
						<label>184</label>
						<align>center</align>
						<width>100</width>
					</control>
					<control type="button" id="10">
						<description>Artwork</description>
						<textoffsetx>5</textoffsetx>
						<label>Edit</label>
						<align>center</align>
						<width>100</width>
					</control>
				</control>	
			</control>

		</control>
	</controls>
</window>