<?xml version="1.0" encoding="UTF-8"?>
<window id="20">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
	<onload condition="Window.Previous(home) + !Skin.HasSetting(DisabledSplash)">ActivateWindow(60)</onload>
	<views>50</views>
    <controls>	
		
		<include>GlobalBackground</include>

		<!--  Fanart Diffuse -->
		
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<fadetime>400</fadetime>
			<colordiffuse>-</colordiffuse>
			<texture background="true" diffuse="backgrounds/BG_GradientFanart.png">$INFO[ListItem.Art(fanart)]</texture>
			<include>Animation_CommonFade</include>
		</control>
		
        <include>View_50_List</include>
		
		<!-- Settings Hint -->

		<control type="group">
			<posx>0</posx>
			<posy>360</posy>
			<control type="image">
				<posx>-10</posx>
				<posy>-25</posy>
				<width>25</width>
				<height>50</height>
				<texture border="10">backgrounds/menu_HintLH.png</texture>
				<colordiffuse>SettingsHint</colordiffuse>
			</control>
			<control type="image">
				<posx>2</posx>
				<posy>-5</posy>
				<width>10</width>
				<height>10</height>
				<texture>icons/icon_Settings.png</texture>
				<colordiffuse>Title</colordiffuse>
			</control>
		</control>
		
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>250</width>
			<height>720</height>
			<include>dialogWindow</include>
			<visible allowhiddenfocus="true">ControlGroup(5000).HasFocus()</visible>
			<animation effect="Slide" start="-250" end="0" time="350" delay="600" tween="quadratic">Visible</animation>
			<animation effect="Slide" start="0" end="-250" time="350" tween="quadratic">Hidden</animation>
		</control>
 
		<!-- Settings -->
		<control type="grouplist" id="5000">
            <posx>20</posx>
            <posy>150</posy>
            <width>230</width>
            <height>600</height>
            <itemgap>0</itemgap>
            <onleft>50</onleft>
            <onright>50</onright>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <orientation>vertical</orientation>
            <visible allowhiddenfocus="true">ControlGroup(5000).HasFocus()</visible>
			<animation effect="Slide" start="-300" end="0" time="350" delay="600" tween="quadratic">Visible</animation>
			<animation effect="Slide" start="0" end="-300" time="350" tween="quadratic">Hidden</animation>
			<animation effect="Slide" start="0" end="0,0" time="350" tween="quadratic" condition="Player.HasVideo">Conditional</animation>
            <control type="button" id="2">
                <description>View</description>
                <align>left</align>
            </control>
            <control type="button" id="3">
                <description>Sort</description>
                <align>left</align>
            </control>
            <control type="togglebutton" id="4">
                <description>Ascending/Descending</description>
                <label>584</label>
                <align>left</align>
                <altlabel>585</altlabel>
            </control>
            <control type="radiobutton" id="5">
                <description>Enable auto-updates</description>
                <label>24063</label>
                <align>left</align>
            </control>
            <control type="radiobutton" id="6">
                <description>No notifications</description>
                <label>25000</label>
                <align>left</align>
            </control>
            <control type="button" id="98">
                <description>Open Player Controls</description>
                <align>left</align>
                <label>31010</label>
                <onclick>ActivateWindow(playercontrols)</onclick>
                <visible>Player.HasMedia</visible>
            </control>
        </control>
    </controls>
</window>