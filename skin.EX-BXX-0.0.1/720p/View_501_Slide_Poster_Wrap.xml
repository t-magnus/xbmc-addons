<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_Slide_Poster_Wrap">
		<description>Slide Posters (id=501)</description>
		<control type="wraplist" id="501">
			<posx>-275</posx>
			<posy>160</posy>
			<width>1700</width>
			<height>555</height>
			<onleft>501</onleft>
			<onright>501</onright>
			<onup>5000</onup>
			<ondown>-</ondown>
			<pagecontrol>25</pagecontrol>
			<orientation>Horizontal</orientation>
			<viewtype label="Poster Wrap">list</viewtype>
			<focusposition>3</focusposition>
			<preloaditems>2</preloaditems>
			<scrolltime tween="Quadratic" easing="out">250</scrolltime>
			<animation type="Conditional" condition="ControlGroup(5000).HasFocus()">
				<effect type="Slide" start="0" end="300" time="350" delay="600" tween="quadratic" />
			</animation>
			<itemlayout width="200" height="280">
				<control type="image">
					<include>Poster_Slide</include>
					<texture background="true">$INFO[ListItem.ActualIcon]</texture>
					<bordersize>20</bordersize>
					<aspectratio align="right">keep</aspectratio>
					<visible>SubString(ListItem.Icon,Default) + !Window.IsVisible(movieinformation)</visible>
				</control>
				<control type="group">
					<visible>!SubString(ListItem.Icon,Default) + !Window.IsVisible(movieinformation)</visible>
					<control type="image">
						<posy>270</posy>
						<include>Poster_Slide</include>
						<texture border="5" background="true" flipy="true" diffuse="ViewPoster/Poster_Matte_NF_Reflect.png">backgrounds/BG_White_Outline.png</texture>
						<fadetime>200</fadetime>
						<colordiffuse>ViewsNF</colordiffuse>
						<aspectratio scalediffuse="true">stretch</aspectratio>
						<visible>!SubString(ListItem.Icon,Default) + !Window.IsVisible(movieinformation)</visible>
					</control>
					<control type="image">
						<posy>275</posy>
						<include>Poster_Slide</include>
						<texture background="true" flipy="true" diffuse="ViewPoster/Poster_Matte_NF_Reflect.png">$INFO[ListItem.Art(poster)]</texture>
						<fadetime>200</fadetime>
						<bordersize>5</bordersize>
						<colordiffuse>ViewsNF</colordiffuse>
						<aspectratio scalediffuse="true">stretch</aspectratio>
						<visible>!SubString(ListItem.Icon,Default) + !Window.IsVisible(movieinformation)</visible>
					</control>
					<control type="image">
						<include>Poster_Slide</include>
						<texture border="5">backgrounds/BG_White_Outline.png</texture>
						<colordiffuse>ViewsNF</colordiffuse>
					</control>
					<control type="image">
						<include>Poster_Slide</include>
						<texture background="true">$INFO[ListItem.Art(poster)]</texture>
						<bordersize>5,5,5,5</bordersize>
						<aspectratio align="right">scale</aspectratio>
						<colordiffuse>ViewsNF</colordiffuse>
					</control>
					<control type="image">
						<include>Poster_Slide</include>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordersize>5,5,5,5</bordersize>
						<aspectratio aligny="top" align="center">scale</aspectratio>
						<visible>IsEmpty(ListItem.Art(poster))</visible>
						<colordiffuse>ViewsNF</colordiffuse>
					</control>
				</control>
			</itemlayout>
			<focusedlayout width="200" height="280">
				<control type="image">
					<include>Poster_SlideFO</include>
					<texture background="true">$INFO[ListItem.ActualIcon]</texture>
					<bordersize>20</bordersize>
					<aspectratio align="right">keep</aspectratio>
					<visible>SubString(ListItem.Icon,Default)</visible>
					<include>focus_Wide</include>
				</control>
				<control type="group">
					<visible>!SubString(ListItem.Icon,Default)</visible>
					<control type="image">
						<posx>-25</posx>
						<posy>280</posy>
						<width>250</width>
						<height>75</height>
						<include>Poster_SlideFO</include>
						<texture border="5">ViewPoster/DropShadow.png</texture>
						<colordiffuse>DropShadow</colordiffuse>
						<include>focus_Wide3</include>
					</control>
					<control type="image">
						<include>Poster_SlideFO</include>
						<texture border="5">backgrounds/BG_White.png</texture>
						<colordiffuse>Accent</colordiffuse>
						<include>focus_Wide2</include>
						<visible>!ControlGroup(5000).HasFocus()</visible>
					</control>
					<control type="image">
						<include>Poster_Slide</include>
						<texture>backgrounds/BG_White.png</texture>
						<bordersize>1</bordersize>
						<colordiffuse>DialogBackground</colordiffuse>
						<include>focus_Wide</include>
					</control>
					<control type="image">
						<include>Poster_SlideFO</include>
						<texture background="true">$INFO[ListItem.Art(poster)]</texture>
						<bordersize>5,5,5,5</bordersize>
						<aspectratio align="center">scale</aspectratio>
						<include>focus_Wide</include>
					</control>
					<control type="image">
						<include>Poster_Slide</include>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordersize>5</bordersize>
						<aspectratio aligny="top" align="center">scale</aspectratio>
						<visible>IsEmpty(ListItem.Art(poster))</visible>
						<include>focus_Wide</include>
					</control>
					<control type="image">
						<include>Poster_SlideFO</include>
						<texture background="true">Overlays/OverlayShine.png</texture>
						<bordersize>-</bordersize>
						<aspectratio align="center">stretch</aspectratio>
						<include>focus_Wide</include>
					</control>
				</control>
			</focusedlayout>
		</control>
	</include>
</includes>