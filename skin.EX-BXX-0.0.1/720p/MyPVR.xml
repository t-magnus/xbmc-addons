<?xml version="1.0" encoding="utf-8"?>
<window id="601">
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<onload condition="Window.Previous(home) + !Skin.HasSetting(DisabledSplash)">ActivateWindow(60)</onload>
	<controls>

		<include>GlobalBackground</include>
		
		<!-- Video Background -->
		<control type="group">			
			<visible>Skin.HasSetting(EPGVideoBackground) + Player.HasVideo</visible>
			<control type="videowindow">
				<include>Dimensions_Fullscreen</include>	
				<include>Animation_CommonFade</include>
			</control>
			<!--control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture diffuse="backgrounds/background.png">backgrounds/BG_GradientVideo.png</texture>
				<colordiffuse>EPGDiffuse</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control-->
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture diffuse="backgrounds/BG_GradientVideo.png">backgrounds/background.png</texture>
				<colordiffuse>EPGDiffuse</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
		</control>

		<!-- VIEWS -->
		<control type="group" id="50">
			<include>view_EPG-timeline</include>
			<include>view_EPG-now</include>
			<include>view_EPG-channels</include>
			<include>view_TVChannels</include>
			<include>view_RadioChannels</include>
			<include>view_TV-timers</include>
			<include>view_TV-search</include>
			<include>view_TV-recordings</include>
		</control>

		<!--Menu Hint-->
		<control type="group">
			<include>-</include>
			<posx>0</posx>
			<posy>360</posy>
			<visible>true</visible>
			<control type="image">
				<posx>-10</posx>
				<posy>-25</posy>
				<width>25</width>
				<height>50</height>
				<texture border="10">backgrounds/menu_HintLH.png</texture>
				<colordiffuse>SettingsHint</colordiffuse>
			</control>
			<control type="image">
				<posx>2</posx>
				<posy>-5</posy>
				<width>10</width>
				<height>10</height>
				<texture>icons/icon_Settings.png</texture>
				<colordiffuse>Title</colordiffuse>
			</control>
		</control>
		<!-- EPG INFO -->
		<control type="group">
			<posy>530</posy>
			<visible>Control.IsVisible(10) | Control.IsVisible(15) |  Control.IsVisible(16) | Control.IsVisible(17)</visible>
			<animation type="Conditional" condition="system.getbool(lookandfeel.enablerssfeeds)">
				<effect type="slide" start="0,0" end="0,-25" time="200" />
			</animation>
			<control type="image">
				<posx>640</posx>
				<posy>15</posy>
				<width>10</width>
				<height>145</height>
				<aspectratio align="left">keep</aspectratio>
				<texture>pvr/separator-y.png</texture>
				<colordiffuse>White</colordiffuse>
			</control>
			<control type="image">
				<posx>300</posx>
				<posy>20</posy>
				<width>125</width>
				<height>125</height>
				<aspectratio>keep</aspectratio>
				<texture fallback="icons/icon_TV.png">$INFO[container(10).ListItem.Thumb]</texture>
				<colordiffuse>TVStationIconDiffuse</colordiffuse>
				<visible>!Player.HasVideo + !IsEmpty(container(10).ListItem.Thumb)</visible>
			</control>
			<control type="image">
				<posx>200</posx>
				<posy>-25</posy>
				<width>225</width>
				<height>225</height>
				<aspectratio align="center">keep</aspectratio>
				<texture>icons/icon_TV.png</texture>
				<colordiffuse>NoVideoIcon</colordiffuse>
				<visible>!Player.HasVideo + IsEmpty(container(10).ListItem.Thumb)</visible>
			</control>


			<control type="grouplist">
				<posy>-</posy>
				<posx>680</posx>
				<itemgap>-</itemgap>

				<control type="label">
					<width>540</width>
					<label>$INFO[ListItem.Title]</label>
					<font>Large</font>
					<textcolor>EPGTitle</textcolor>
					<height>35</height>
					<align>left</align>
				</control>
				<control type="label">
					<width>540</width>
					<label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ]$INFO[ListItem.Genre,  â€¢ ]</label>
					<font>SmallLow</font>
					<textcolor>EPGSubtitle</textcolor>
					<height>25</height>
					<align>left</align>
				</control>
				<control type="textbox">
					<width>560</width>
					<height>110</height>
					<label>$INFO[ListItem.Plot]</label>
					<font>SmallLow</font>
					<align>justify</align>
					<textcolor>EPGPlot</textcolor>
				</control>
			</control>
		</control>
		<include>TVMenu</include>
	</controls>
</window>