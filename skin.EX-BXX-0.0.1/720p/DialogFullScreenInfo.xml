<?xml version="1.0" encoding="UTF-8"?>

<window type="dialog" id="142">
	<controls>
		<control type="group">
			<posy>600</posy>
			<control type="image">
				<description>Background</description>
				<posx>-</posx>
				<posy>-</posy>
				<width>1280</width>
				<height>120</height>
				<include>OSDWindow</include>
			</control>
			<control type="label">
				<posx>30</posx>
				<posy>-</posy>
				<width>880</width>
				<label>$INFO[VideoPlayer.TVShowTitle] [COLOR=Accent]$INFO[VideoPlayer.Title][/COLOR]</label>
				<align>left</align>
				<font>Medium</font>
				<textcolor>White</textcolor>
				<visible>VideoPlayer.Content(Episodes)</visible>
			</control>
			<control type="label">
				<posx>30</posx>
				<posy>-</posy>
				<width>880</width>
				<label>$INFO[VideoPlayer.Title]</label>
				<align>left</align>
				<font>Medium</font>
				<textcolor>White</textcolor>
				<visible>VideoPlayer.Content(Movies) | VideoPlayer.Content(livetv)</visible>
			</control>
			<control type="label">
				<posx>30</posx>
				<posy>-</posy>
				<width>880</width>
				<label>$INFO[VideoPlayer.Artist]$INFO[VideoPlayer.Album, - ]</label>
				<align>left</align>
				<font>Medium</font>
				<textcolor>White</textcolor>
				<visible>VideoPlayer.Content(MusicVideos)</visible>
			</control>
			<control type="label">
				<description>Chapter Count</description>
				<posx>30</posx>
				<posy>30</posy>
				<width>300</width>
				<label>$INFO[Player.Chapter,[COLOR=Accent]$LOCALIZE[21396]:[/COLOR] ]$INFO[Player.ChapterCount, / ]</label>
				<align>left</align>
				<font>SmallLow</font>
				<textcolor>White</textcolor>
				<visible>Player.ChapterCount</visible>
			</control>
			<control type="label">
				<posx>30</posx>
				<posy>30</posy>
				<width>880</width>
				<label>season $INFO[VideoPlayer.Season] - episode $INFO[VideoPlayer.Episode]</label>
				<scroll>true</scroll>
				<align>left</align>
				<font>SmallLow</font>
				<textcolor>White</textcolor>
				<visible>VideoPlayer.Content(Episodes)</visible>
			</control>
			<control type="label">
				<description>Player Times</description>
				<posx>1250</posx>
				<posy>-</posy>
				<width>500</width>
				<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
				<align>right</align>
				<font>Medium</font>
				<textcolor>White</textcolor>
			</control>
			<control type="label">
				<description>Current Video End Time</description>
				<posx>1250</posx>
				<posy>30</posy>
				<width>890</width>
				<label>[COLOR=Accent]Ends @[/COLOR] $INFO[Player.FinishTime]</label>
				<align>right</align>
				<font>SmallLow</font>
				<textcolor>White</textcolor>
			</control>
			<control type="progress">
				<posx>30</posx>
				<posy>85</posy>
				<width>1220</width>
				<height>10</height>
				<texturebg>OSD/ProgressClear.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture>OSD/ProgressWhite.png</midtexture>
				<colordiffuse>Accent</colordiffuse>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
				<info>Player.ProgressCache</info>
			</control>
			<control type="progress">
				<description>Progressbar</description>
				<posx>30</posx>
				<posy>85</posy>
				<width>1220</width>
				<height>10</height>
				<texturebg>OSD/ProgressClearAlt.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture>OSD/ProgressWhite.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
				<info>Player.Progress</info>
			</control>
		</control>
	</controls>
</window>